<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:round_image="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCategory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_large_20">

    <quanth.vn.com.tv_kids.views.RoundedConnerImageView
        android:id="@+id/imgCategory"
        android:layout_width="@dimen/height_avatar_94"
        android:layout_height="@dimen/height_avatar_94"
        android:layout_margin="2dp"
        android:contentDescription="@null"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        round_image:corner_radius="5dp" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_item_category"
        android:padding="3dp"
        android:text="@string/app_name"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="@id/imgCategory"
        app:layout_constraintStart_toStartOf="@id/imgCategory"
        app:layout_constraintTop_toBottomOf="@id/imgCategory" />
</android.support.constraint.ConstraintLayout>